import streamlit as st
import yfinance as yf
import pandas as pd
import plotly.graph_objects as go
from datetime import datetime
import plotly.express as px

# í˜ì´ì§€ ì„¤ì •
st.set_page_config(
    page_title="ì£¼ê°€ í˜„í™© ëŒ€ì‹œë³´ë“œ",
    page_icon="ğŸ“ˆ",
    layout="wide"
)

# ì‹œì´ Top 10 ê¸°ì—… (2024ë…„ ê¸°ì¤€)
TOP_10_COMPANIES = {
    "Apple": "AAPL",
    "Microsoft": "MSFT",
    "Alphabet": "GOOGL",
    "Amazon": "AMZN",
    "NVIDIA": "NVDA",
    "Tesla": "TSLA",
    "Meta": "META",
    "Berkshire Hathaway": "BRK-B",
    "Taiwan Semiconductor": "TSM",
    "Visa": "V"
}

# ì°¨ì„¸ëŒ€ AI ê¸°ì—…
AI_TOP_COMPANIES = {
    "Palantir": "PLTR",
    "Snowflake": "SNOW",
    "UiPath": "PATH",
    "C3.ai": "AI",
    "Datadog": "DDOG",
    "Cloudflare": "NET",
    "ServiceNow": "NOW",
    "OpenAI ê´€ë ¨ Microsoft": "MSFT"
}

@st.cache_data
def get_stock_data(ticker, period="3y"):
    try:
        stock = yf.Ticker(ticker)
        data = stock.history(period=period)
        return data
    except Exception as e:
        st.error(f"{ticker} ë°ì´í„°ë¥¼ ê°€ì ¸ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ ë°œìƒ: {e}")
        return None

@st.cache_data
def get_company_info(ticker):
    try:
        stock = yf.Ticker(ticker)
        info = stock.info
        return {
            'name': info.get('longName', 'N/A'),
            'sector': info.get('sector', 'N/A'),
            'marketCap': info.get('marketCap', 0),
            'currentPrice': info.get('currentPrice', 0)
        }
    except:
        return {'name': 'N/A', 'sector': 'N/A', 'marketCap': 0, 'currentPrice': 0}

def format_market_cap(market_cap):
    if market_cap >= 1e12:
        return f"${market_cap/1e12:.2f}T"
    elif market_cap >= 1e9:
        return f"${market_cap/1e9:.2f}B"
    elif market_cap >= 1e6:
        return f"${market_cap/1e6:.2f}M"
    else:
        return f"${market_cap:,.0f}"

def main():
    st.title("ğŸ“ˆ ì£¼ê°€ í˜„í™© ëŒ€ì‹œë³´ë“œ")
    st.markdown("ìµœê·¼ 3~5ë…„ê°„ ì£¼ìš” ê¸°ì—…ë“¤ì˜ ì£¼ê°€ ë°ì´í„°ë¥¼ ë¹„êµí•©ë‹ˆë‹¤.")
    
    # ê¸°ì—… ìœ í˜• ì„ íƒ
    st.sidebar.header("ê¸°ì—… ì„ íƒ")
    category = st.sidebar.radio("ê¸°ì—… ë¶„ë¥˜ ì„ íƒ", ("ì‹œì´ Top 10", "ì°¨ì„¸ëŒ€ AI ê¸°ì—…"))

    if category == "ì‹œì´ Top 10":
        available_companies = TOP_10_COMPANIES
    else:
        available_companies = AI_TOP_COMPANIES

    selected_companies = st.sidebar.multiselect(
        "ë¶„ì„í•  ê¸°ì—…ì„ ì„ íƒí•˜ì„¸ìš”:",
        options=list(available_companies.keys()),
        default=list(available_companies.keys())[:3]
    )

    if not selected_companies:
        st.warning("ìµœì†Œ í•˜ë‚˜ì˜ ê¸°ì—…ì„ ì„ íƒí•´ì£¼ì„¸ìš”.")
        return

    period_options = {
        "1ë…„": "1y",
        "2ë…„": "2y",
        "3ë…„": "3y",
        "5ë…„": "5y"
    }

    selected_period = st.sidebar.selectbox(
        "ê¸°ê°„ ì„ íƒ:",
        options=list(period_options.keys()),
        index=2
    )

    chart_type = st.sidebar.radio(
        "ì°¨íŠ¸ íƒ€ì…:",
        ["ë¼ì¸ ì°¨íŠ¸", "ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸"]
    )

    # ë°ì´í„° ë¡œë”©
    with st.spinner("ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘..."):
        stock_data = {}
        company_info = {}

        for company in selected_companies:
            ticker = available_companies[company]
            data = get_stock_data(ticker, period_options[selected_period])
            info = get_company_info(ticker)

            if data is not None and not data.empty:
                stock_data[company] = data
                company_info[company] = info

    if not stock_data:
        st.error("ì„ íƒí•œ ê¸°ì—…ì˜ ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.")
        return

    st.header("ğŸ“Š ì„ íƒëœ ê¸°ì—… ì •ë³´")
    cols = st.columns(len(selected_companies))
    for i, company in enumerate(selected_companies):
        info = company_info[company]
        with cols[i]:
            st.metric(
                label=f"{company}",
                value=f"${info['currentPrice']:.2f}",
                delta=f"ì‹œì´: {format_market_cap(info['marketCap'])}"
            )
            st.caption(f"ì„¹í„°: {info['sector']}")

    # ì£¼ê°€ ì°¨íŠ¸
    st.header("ğŸ“ˆ ì£¼ê°€ ì°¨íŠ¸")

    if chart_type == "ë¼ì¸ ì°¨íŠ¸":
        fig = go.Figure()
        colors = px.colors.qualitative.Set1[:len(selected_companies)]

        for i, (company, data) in enumerate(stock_data.items()):
            fig.add_trace(go.Scatter(
                x=data.index,
                y=data['Close'],
                mode='lines',
                name=company,
                line=dict(color=colors[i], width=2),
                hovertemplate=f'<b>{company}</b><br>' +
                              'Date: %{x}<br>' +
                              'Price: $%{y:.2f}<br>' +
                              '<extra></extra>'
            ))

        fig.update_layout(
            title=f"ì£¼ê°€ ì¶”ì´ - {selected_period}",
            xaxis_title="ë‚ ì§œ",
            yaxis_title="ì£¼ê°€ (USD)",
            hovermode='x unified',
            height=600,
            template='plotly_white'
        )

    else:
        if len(selected_companies) > 1:
            st.info("ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸ëŠ” í•œ ë²ˆì— í•˜ë‚˜ì˜ ê¸°ì—…ë§Œ í‘œì‹œë©ë‹ˆë‹¤. ì²« ë²ˆì§¸ ì„ íƒëœ ê¸°ì—…ì„ í‘œì‹œí•©ë‹ˆë‹¤.")
        company = selected_companies[0]
        data = stock_data[company]

        fig = go.Figure(data=go.Candlestick(
            x=data.index,
            open=data['Open'],
            high=data['High'],
            low=data['Low'],
            close=data['Close'],
            name=company
        ))

        fig.update_layout(
            title=f"{company} ìº”ë“¤ìŠ¤í‹± ì°¨íŠ¸ - {selected_period}",
            xaxis_title="ë‚ ì§œ",
            yaxis_title="ì£¼ê°€ (USD)",
            height=600,
            template='plotly_white'
        )

    st.plotly_chart(fig, use_container_width=True)

    # ì„±ê³¼ ë¹„êµ
    st.header("ğŸ“Š ì„±ê³¼ ë¹„êµ")
    performance_data = []
    for company, data in stock_data.items():
        start_price = data['Close'].iloc[0]
        end_price = data['Close'].iloc[-1]
        total_return = ((end_price - start_price) / start_price) * 100
        max_price = data['Close'].max()
        min_price = data['Close'].min()

        performance_data.append({
            'ê¸°ì—…': company,
            'ì‹œì‘ ê°€ê²©': f"${start_price:.2f}",
            'í˜„ì¬ ê°€ê²©': f"${end_price:.2f}",
            'ì´ ìˆ˜ìµë¥ ': f"{total_return:.2f}%",
            'ìµœê³ ê°€': f"${max_price:.2f}",
            'ìµœì €ê°€': f"${min_price:.2f}",
            'ë³€ë™ì„±': f"{data['Close'].std():.2f}"
        })

    df_performance = pd.DataFrame(performance_data)
    st.dataframe(df_performance, use_container_width=True)

    # ê±°ë˜ëŸ‰ ë¶„ì„
    st.header("ğŸ“Š ê±°ë˜ëŸ‰ ë¶„ì„")
    fig_volume = go.Figure()

    for i, (company, data) in enumerate(stock_data.items()):
        fig_volume.add_trace(go.Scatter(
            x=data.index,
            y=data['Volume'],
            mode='lines',
            name=company,
            line=dict(color=colors[i % len(colors)], width=2),
            hovertemplate=f'<b>{company}</b><br>' +
                          'Date: %{x}<br>' +
                          'Volume: %{y:,.0f}<br>' +
                          '<extra></extra>'
        ))

    fig_volume.update_layout(
        title=f"ê±°ë˜ëŸ‰ ì¶”ì´ - {selected_period}",
        xaxis_title="ë‚ ì§œ",
        yaxis_title="ê±°ë˜ëŸ‰",
        hovermode='x unified',
        height=400,
        template='plotly_white'
    )

    st.plotly_chart(fig_volume, use_container_width=True)

    # ì•ˆë‚´
    st.header("â„¹ï¸ ì¶”ê°€ ì •ë³´")
    st.info("""
    **ë°ì´í„° ì†ŒìŠ¤**: Yahoo Finance

    **ì£¼ì˜ì‚¬í•­**:
    - ì´ ë°ì´í„°ëŠ” íˆ¬ì ì¡°ì–¸ì´ ì•„ë‹™ë‹ˆë‹¤.
    - ì‹¤ì œ íˆ¬ì ì „ì— ì „ë¬¸ê°€ì™€ ìƒë‹´í•˜ì„¸ìš”.
    - ê³¼ê±° ì„±ê³¼ê°€ ë¯¸ë˜ ì„±ê³¼ë¥¼ ë³´ì¥í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.
    """)

if __name__ == "__main__":
    main()
